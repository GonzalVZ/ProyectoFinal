<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="15.0" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.AñadirMedicionController"
      stylesheets="@styles/estilo.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Añadir nueva medición" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="campoFecha" promptText="Fecha (YYYY-MM-DD)" />
    <TextField fx:id="campoHora" promptText="Hora (HH:MM)" />
    <TextField fx:id="campoTemperatura" promptText="Temperatura (°C)" />
    <TextField fx:id="campoPrecipitacion" promptText="Precipitación (mm)" />
    <TextField fx:id="campoPresion" promptText="Presión (hPa)" />
    <TextField fx:id="campoHumedad" promptText="Humedad (%)" />

    <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarMedicion" prefWidth="200.0" />
</VBox>
